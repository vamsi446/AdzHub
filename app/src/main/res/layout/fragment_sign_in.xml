<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="@dimen/padding"
    tools:context=".view.auth.SignInFragment">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin7"
        android:layout_marginTop="@dimen/margin6"
        android:layout_marginEnd="@dimen/margin7"
        android:background="@color/Blue700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin9"
        android:layout_marginTop="@dimen/resetBTop"
        android:background="@drawable/curve_reactangle_night"
        android:backgroundTint="@color/Blue300"
        android:fontFamily="@font/podvoka_extra_bold"
        android:text="@string/userLogin"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/textSize1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin6"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/signin"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/passwordLoginET"
        app:layout_constraintStart_toStartOf="@+id/passwordLoginET"
        app:layout_constraintTop_toBottomOf="@+id/passwordLoginET" />

    <EditText
        android:id="@+id/passwordLoginET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5"
        android:background="@drawable/curve_reactangle_night"
        android:backgroundTint="@color/Blue300"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:drawablePadding="@dimen/padding"
        android:ems="@integer/ems"
        android:fontFamily="@font/fira_light"
        android:gravity="center_vertical"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="@dimen/padding"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/usernameLoginET"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/usernameLoginET"
        app:layout_constraintTop_toBottomOf="@+id/usernameLoginET" />

    <TextView
        android:id="@+id/newUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin2"
        android:fontFamily="@font/comfortaa"
        android:text="@string/newuser"
        android:textColor="@color/Blue900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInButton" />

    <EditText
        android:id="@+id/usernameLoginET"
        android:layout_width="@dimen/ETWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin3"
        android:background="@drawable/curve_reactangle_night"
        android:backgroundTint="@color/Blue300"
        android:drawableStart="@android:drawable/sym_action_email"
        android:ems="@integer/ems"
        android:fontFamily="@font/fira_light"
        android:gravity="center_vertical"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/padding"
        android:paddingStart="@dimen/padding"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/forgotPasswordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin6"
        android:fontFamily="@font/comfortaa"
        android:text="@string/forgotpassword"
        android:textColor="@color/Blue900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@fraction/bias2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newUser" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/logoW"
        android:layout_height="@dimen/logoH"
        android:layout_marginTop="@dimen/margin6"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>